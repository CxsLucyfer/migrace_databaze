<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:f="http://java.sun.com/jsf/core">
    <h:head>
        <title>Cestující</title>
    </h:head>
    <h:body>
        <ui:param name="pageTitle" value="#{msgs.noteEditTitle}" />
            <h1><h:outputText value="#{msgs.noteEditTitle}" /></h1>
            <h:form>

                <h:panelGrid columns="3" columnClasses="dataLabel,,">
                    <h:outputText value="Vysvětlení:" />
                    <h:inputText value="#{notes.note.explanation}" id="ex" label="Vysvětlení" required="true" requiredMessage="#{msgs.requiredMessage}">
                        <f:validateLength minimum="2"/>
                    </h:inputText>
                    <h:message for="ex" errorClass="errorRequired"/>
                </h:panelGrid>
                <h:commandButton type="submit" value="#{msgs.save}" action="#{notes.saveNote}"/>
                <h:commandLink action="notes" value="#{msgs.back}" immediate="true" />
                <h:messages globalOnly="true"/>
            </h:form>
    </h:body>
</html>
